{
    "compilerOptions": {
      "lib": ["ES2020", "DOM"],
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "isolatedModules": true,
      "noEmit": false,
      "composite": true,
      "skipLibCheck": true,
       "sourceMap": true,
    },
    "ts-node": {
      "compilerOptions": {
        "module": "CommonJS",
        "baseUrl": "./"
      }
    }
  }
  